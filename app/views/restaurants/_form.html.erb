<%= form_with model: @restaurant do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_area :address, class: 'form-control' %>
  </div>

   <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, collection: Restaurant::CATEGORIES %>
  </div>

  <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>
